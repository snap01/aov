{{!--Equipment Tab--}}
<section class='character tab history {{tab.cssClass}}' data-group='primary' data-tab='history'>

  {{!--Equipment List--}}
  <ol class='gear-list'>
    <li class='item gear-header primBackCol history-grid'>
      <div class='lfet'>{{localize 'AOV.year'}}</div>
      <div class='left'>{{localize 'AOV.name'}}</div>
      <div class='centre'>{{localize 'AOV.description'}}</div>
      <div class='centre'>
        {{#if @root.editable}}
        <a class='item-control item-create' title='{{localize "AOV.createDoc" type=(localize "TYPES.Item.history")}}'
          data-action='createDoc' data-document-class='Item' data-type='history'>
          <i class='fas fa-plus'></i>
        </a>
        {{/if}}
      </div>
    </li>
    {{#each histories as |item id|}}
    <li class='item history-grid' data-item-id='{{item._id}}' data-drag='true' data-document-class='Item'>
      <div class='gear-name terIcon centre'>{{item.system.year}}</div>
      <div class="gear-name left rollable truncate" title='{{item.name}}'
        data-action='viewDoc'>{{item.name}}</div>
      <div class="gear-name truncate" title="{{item.system.shortDesc}}">{{item.system.shortDesc}}</div>
      {{#unless ../isLocked}}
      <div class='gear-controls centre'>
        <a class='item-delete centre' title='{{localize "AOV.deleteDoc" type=(localize "TYPES.Item.history")}}'
          data-action="deleteDoc">
          <i class='fas fa-trash'></i>
        </a>
      </div>
      {{/unless}}
    </li>
    {{/each}}
    <br>


  </ol>

</section>