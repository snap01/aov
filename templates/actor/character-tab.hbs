<nav class="aov character tabs" aria-roledescription="{{localize 'SHEETS.FormNavLabel'}}">
  {{#each tabs as |tab|}}
    <div class="tab {{tab.colour}}" data-action="tab" data-group="{{tab.group}}" data-tab="{{tab.id}}">
      <a class="{{tab.cssClass}} tab-label"
        {{#if tab.tooltip}}data-tooltip="{{tab.tooltip}}" {{/if}}>
        {{#if tab.icon}}<i class="{{tab.icon}}"></i>{{/if}}
        {{#if tab.label}}{{localize tab.label}}{{/if}}
      </a>
    </div>
  {{/each}}
</nav>